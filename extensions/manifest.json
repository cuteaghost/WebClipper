{
  "name": "Web Clipper",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "A chrome extension to clip paragraph or page in website.",
  "icons": {
    "16": "icons/icons16.png",
    "48": "icons/icons48.png",
    "128": "icons/icons128.png"
  },
  "background": {
    "scripts": ["view/js/background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_icon": {
      "19": "icons/icons19.png",
      "38": "icons/icons38.png"
    },
    "default_title": "Web Clipper"
  },
  "permissions": [
    "contextMenus",
    "activeTab",
    "nativeMessaging"
  ]
}